

<div id = "blog_profile_container">

<%= image_tag(@usersblog.profile_picture) %><br><br>
Email: <br><%= @usersblog.email %><br><br>
Username: <br><%= @usersblog.username %><br><br>
TestOfVirtualAttribute:<br><%= @usersblog.username_and_email %><br><br>
<%= simple_format(@usersblog.comment)%>
</div>
<div id ="blog_container">
<p>
<%if @usersblog.id == session[:user_id]%>
	<%= link_to "New Post", new_blog_path %>
<%end%>
</p>
<table>
<% @usersblog.blogs.each do |post| %>
<tr>
<td><h2><%= post.title %></h2></td>
</tr>
<tr>
<td id="timestamp">Posted on: <%= post.Date_Created %></td>
</tr>
<tr>
     
<td><%=simple_format(post.body) %></td>
<%if @usersblog.id == session[:user_id]%>
<td style = "width:20px;">
		<%= link_to "Edit", edit_blog_path(post) %>
		<%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %>
</td>
</tr>

<% end %>
<tr>
<p id="commentcount">
  <% @sample = post.comments.count.to_s %>
  <td><%=  link_to @sample+ " Comments", show_comments_path(post) %></td>
</p>
</tr>
<tr>
  <td><hr><td>
</tr>
<%end%>
</table>
  
</div>



